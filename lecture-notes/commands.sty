% \ylink{time}[text] where time = ss | mm:ss | hh:mm:ss
\NewDocumentCommand{\ylink}{m o}{%
    \begingroup
    \StrCount{#1}{:}[\yt@cols]%
    \def\yt@sec{}%
    \ifnum\yt@cols=2\relax
        \StrBefore{#1}{:}[\yt@h]%
        \StrBehind{#1}{:}[\yt@rest]%
        \StrBefore{\yt@rest}{:}[\yt@m]%
        \StrBehind{\yt@rest}{:}[\yt@s]%
        \edef\yt@sec{\the\numexpr \yt@h*3600 + \yt@m*60 + \yt@s\relax}%
    \else\ifnum\yt@cols=1\relax
            \StrBefore{#1}{:}[\yt@m]%
            \StrBehind{#1}{:}[\yt@s]%
            \edef\yt@sec{\the\numexpr \yt@m*60 + \yt@s\relax}%
        \else
            \edef\yt@sec{#1}%
        \fi\fi
    \StrCount{\yt@base}{?}[\yt@q]%
    \def\yt@sep{&}\ifnum\yt@q=0 \def\yt@sep{?}\fi
    \href{\yt@base\yt@sep t=\yt@sec}{\IfNoValueTF{#2}{#1}{#2}}%
    \endgroup
}


